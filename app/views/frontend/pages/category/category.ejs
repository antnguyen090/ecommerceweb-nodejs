<%- include('./../../helpers/showfeaturedproduct'); -%>
<%- include('./../../helpers/showcategoryfilter'); -%>
<%- include('./../../helpers/showproductbycategory'); -%>

<% 
	const collectionProduct = "product";
	const linkThumbProduct = "/" + "uploads" + `/${collectionProduct}/`;
    const unit = ' VND'
%>

<!-- introBannerHolder -->
<section class="introBannerHolder d-flex w-100 bgCover" style="background-image: url(/frontend/images/breadcum.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-12 pt-lg-23 pt-md-15 pt-sm-10 pt-6 text-center">
                <ul class="list-unstyled breadCrumbs d-flex justify-content-center" style="margin-top: 12%; font-size: 15px;"> 
                    <li class="mr-2"><a href="/index">Trang Chủ</a></li>
                    <li class="mr-2">/</li>
                    <li class="active"><%= listProductByCategory.name %></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- twoColumns -->
<div class="twoColumns container pt-xl-5 pb-xl-5 pt-lg-5 pb-lg-5 py-md-8 py-5">
    <div class="row">
        <div class="col-12 col-lg-9 order-lg-3">
            <!-- content -->
            <article id="content">
                <!-- show-head -->
                <header class="show-head d-flex flex-wrap justify-content-between mb-7">
                    <ul class="list-unstyled viewFilterLinks d-flex flex-nowrap align-items-center">
                        <li class="mr-2"><a href="javascript:void(0);" class="active"><i
                                    class="fas fa-th-large"></i></a></li>
                        <li class="mr-2"><a href="javascript:void(0);"><i class="fas fa-list"></i></a></li>
                        <li class="mr-2">Showing 1–9 of 24 results</li>
                    </ul>
                    <!-- sortGroup -->
                    <div class="sortGroup">
                        <div class="d-flex flex-nowrap align-items-center">
                            <strong class="groupTitle mr-2">Sắp xếp theo:</strong>
                            <div class="dropdown">
                                <button class="dropdown-toggle buttonReset" type="button" id="sortGroup"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Mặc định</button>
                                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="sortGroup">
                                    <li><a href="javascript:void(0);">Giá từ thấp đến cao</a></li>
                                    <li><a href="javascript:void(0);">Giá từ cao đến thấp</a></li>
                                    <li><a href="javascript:void(0);">Giảm giá từ thấp đến cao</a></li>
                                    <li><a href="javascript:void(0);">Giảm giá từ cao đến thấp</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </header>
                <div class="row">
                    <%- showProductByCategory(listProductByCategory.productList, linkThumbProduct, unit) %>
                </div>
            </article>
        </div>
        <div class="col-12 col-lg-3 order-lg-1">
            <!-- sidebar -->
            <aside id="sidebar">
                <!-- widget -->
                <section class="widget overflow-hidden mb-9">
                    <form action="javascript:void(0);" class="searchForm position-relative border">
                        <fieldset>
                            <input type="search" class="form-control" placeholder="Tìm sản phẩm...">
                            <button class="position-absolute"><i class="icon-search"></i></button>
                        </fieldset>
                    </form>
                </section>
                <!-- widget -->
                <section class="widget overflow-hidden mb-9">
                    <h3 class="headingVII fwEbold text-uppercase mb-5">DANH MỤC SẢN PHẨM</h3>
                    <ul class="list-unstyled categoryList mb-0">
                        <%- showCategoryFilter(listCategory) %>
                    </ul>
                </section>
                <!-- widget -->
                <section class="widget mb-9">
                    <h3 class="headingVII fwEbold text-uppercase mb-6">Lọc Theo Giá</h3>
                    <!-- filter ranger form -->
                    <form action="javascript:void(0);" class="filter-ranger-form">
                        <div id="slider-range"></div>
                        <input type="hidden" id="amount1" name="amount1">
                        <input type="hidden" id="amount2" name="amount2">
                        <div class="get-results-wrap d-flex align-items-center justify-content-between">
                            <button type="button"
                                class="btn btnTheme btn-shop fwEbold md-round px-3 pt-1 pb-2 text-uppercase">Lọc</button>
                            <p id="amount" class="mb-0"></p>
                        </div>
                    </form>
                </section>
                <!-- widget -->
                <section class="widget mb-9">
                    <h3 class="headingVII fwEbold text-uppercase mb-6">Nổi Bật</h3>
                    <ul class="list-unstyled recentListHolder mb-0 overflow-hidden">
                             <%- showFeaturedProduct(listProductOption, linkThumbProduct, unit, 'category') %>
                    </ul>
                </section>
            </aside>
        </div>
    </div>
</div>
<%- include('./../../elements/subscribe'); -%>
