<%- include('./../../helpers/showfeaturedproduct'); -%>
<%- include('./../../helpers/showcategoryfilter'); -%>
<%- include('./../../helpers/showproductbycategory'); -%>
<%- include('./../../helpers/showdeliverylist'); -%>

<% 
    let userAddress
    if(userInfo.address.info){
        userAddress = userInfo.address.info
    }
	const collectionProduct = "product";
	const linkThumbProduct = "/" + "uploads" + `/${collectionProduct}/`;
    const unit = ' VND'
	const linkThumbSetting = "/" + "uploads" + `/setting/`;
%>

<!-- introBannerHolder -->
<section class="introBannerHolder d-flex w-100 bgCover" style="background-image: url(<%= linkThumbSetting + settingPage.logobanner%>);">
    <div class="container">
        <div class="row">
            <div class="col-12 pt-lg-23 pt-md-15 pt-sm-10 pt-6 text-center">
                <ul class="list-unstyled breadCrumbs d-flex justify-content-center" style="margin-top: 12%; font-size: 15px;"> 
                    <li class="mr-2"><a href="/">Trang Chủ</a></li>
                    <li class="mr-2">/</li>
                    <li class="active"><%= pageTitle %></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- twoColumns -->
<div class="cartHolder container pt-xl-5">
    <div class="row tableListProduct">
        <!-- table-responsive -->
        <div class="col-12 mb-xl-10 mb-lg-5 mb-md-8 mb-5 mt-4">
            <!-- cartTable -->
            <div class="d-flex justify-content-center">
                <div class="spinner-border text-success" role="status">
                  <span class="sr-only">Loading...</span>
                </div>
              </div>

        </div>
    </div>
    <div id="cartInfoPersonal" class="row d-none">
        <div class="col-12 col-md-6">
            <form action="javascript:void(0);" class="couponForm mb-md-0 mb-5">
                <fieldset>
                    <div class="mt-holder d-inline-block align-bottom mr-lg-5 mr-0 mb-lg-0 mb-2">
                        <label for="code" class="fwEbold text-uppercase d-block mb-1">Tên Người Nhận</label>
                        <input type="text" name="name" class="form-control" value="<%= userInfo.name %>">
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="col-12 col-md-6">
            <form action="javascript:void(0);" class="couponForm mb-md-0 mb-5">
                <fieldset>
                    <div class="mt-holder d-inline-block align-bottom mr-lg-5 mr-0 mb-lg-0 mb-2">
                        <label for="code" class="fwEbold text-uppercase d-block mb-1">Địa Chỉ Nhà</label>
                        <input type="text" name="address" class="form-control" value="<%= userAddress %>" placeholder="Nhập địa chỉ...">
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="col-12 col-md-6">
            <form action="javascript:void(0);" class="couponForm mb-md-0 mb-5">
                <fieldset>
                    <div class="mt-holder d-inline-block align-bottom mr-lg-5 mr-0 mb-lg-0 mb-2">
                        <label for="code" class="fwEbold text-uppercase d-block mb-1">Tỉnh</label>
                        <select name="province" class="form-select form-control form-control-lg" aria-label="Default select example">
                            <%- showDeliveryList(deliveryList, userInfo.address) %>
                          </select>
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="col-12 col-md-6">
            <form action="javascript:void(0);" class="couponForm mb-md-0 mb-5">
                <fieldset>
                    <div class="mt-holder d-inline-block align-bottom mr-lg-5 mr-0 mb-lg-0 mb-2">
                        <label for="code" class="fwEbold text-uppercase d-block mb-1">Số Điện Thoại</label>
                        <input type="text" name="phonenumber" class="form-control" value="<%= userInfo.phonenumber %>">
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="col-12">
            <form action="javascript:void(0);" class="cartForm mb-5">
                <div class="form-group mb-0">
                    <label for="note" class="fwEbold text-uppercase d-block mb-1">Ghi Chú</label>
                    <textarea id="note" class="form-control" name="notes"></textarea>
                </div>
            </form>
        </div>
        <div class="col-12 col-md-6">
            <form action="javascript:void(0);" class="couponForm mb-md-0 mb-5">
                <fieldset class="couponCode">
                    <div class="mt-holder d-inline-block align-bottom mr-lg-5 mr-0 mb-lg-0 mb-2">
                        <label for="code" class="fwEbold text-uppercase d-block mb-1">Mã Giảm Giá</label>
                        <input type="text" name="couponCode" class="form-control" disabled>
                    </div>
                    <button type="submit" class="btn btnTheme btnCart fwEbold text-center text-white md-round py-3 px-4 py-md-3 px-md-4 mt-2 submitCodeCoupon" disabled>Áp Dụng</button>
                </fieldset>
            </form>
        </div>
        <div class="col-12 col-md-6 sumPrice">
            <div class="d-flex justify-content-between totalPrice">
                <strong class="txt fwEbold text-uppercase mb-1">Tổng Tiền Hàng</strong>
                <strong class="price fwEbold text-uppercase mb-1">Đang tải...</strong>
            </div>
            <div class="d-flex justify-content-between costShip">
                <strong class="txt fwEbold text-uppercase mb-1">Phí Vận Chuyển</strong>
                <strong class="price fwEbold text-uppercase mb-1">Đang tải...</strong>
            </div>
            <div class="d-flex justify-content-between totalPriceCoupon">
                <strong class="txt fwEbold text-uppercase mb-1">Tổng Thanh Toán</strong>
                <strong class="price fwEbold text-uppercase mb-1"><span style="font-weight:900">Đang tải...</span></strong>
              </div>
            <a href="javascript:void(0);" class="btn btnTheme w-100 fwEbold text-center text-white md-round py-3 px-4 py-md-3 px-md-4 orderComplete disabled">Mua Hàng</a>
        </div>
    </div>
</div>
<%- include('./../../elements/advertisment'); -%>

