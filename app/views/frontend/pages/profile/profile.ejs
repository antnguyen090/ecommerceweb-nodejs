<%- include('./../../helpers/formatphonenumber'); -%>
<%- include('./../../helpers/showdeliverylist'); -%>

<%
  let showErrorRegister = (error) =>{
    if(!error) return
    let html =''
    error.forEach(item=>{
      let login = (item.param == 'emailexits') 
      ? `<a href="/dang-nhap"
      class="font-weight-bold text-success"><u>Đăng nhập ở đây</u></a> 
      `
      : ''
      html+= `
      <div class="alert alert-danger" role="alert">
        ${item.msg} ${login}
      </div>
      `
    })
    return html
  }
	const linkThumbSetting = "/" + "uploads" + `/setting/`;
%>
<section class="introBannerHolder d-flex w-100 bgCover" style="background-image: url(<%= linkThumbSetting + settingPage.logobanner%>);">
  <div class="container">
      <div class="row">
          <div class="col-12 pt-lg-23 pt-md-15 pt-sm-10 pt-6 text-center">
              <ul class="list-unstyled breadCrumbs d-flex justify-content-center" style="margin-top: 12%; font-size: 15px;">
                  <li class="mr-2"><a href="/">Trang Chủ</a></li>
                  <li class="mr-2">/</li>
                  <li class="active"><%= pageTitle %></li>
              </ul>
          </div>
      </div>
  </div>
</section>

<div class="registerSec container pt-xl-10 pb-xl-10 py-lg-10 pt-md-8 pb-md-5 pt-5 pb-0">
  <div class="row">
      <div class="col-12">
        <section class="bgCover"
        style="background-image: url('/frontend/images/bg-newsletter.png');">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
          <div class="container h-100 mt-5 mb-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
              <div class="col-6 col-md-9 col-lg-7 col-xl-6">
                <div class="card" style="border-radius: 15px;">
                  <div class="card-body p-5">
                    <h2 class="text-uppercase text-center mb-5">Thông Tin Tài Khoản</h2>
                    <form id="formProfile" action="" method="post">
                      <div class="form-outline mb-4">
                        <input type="text"  name="name" class="form-control form-control-lg" value='<%= userInfo.name %>' />
                        <label class="form-label" for="">Tên của bạn</label>
                      </div>
                      <div class="form-outline mb-4">
                        <div class="row">
                          <div class="col-6">
                            <div class="form-outline">
                              <input type="text" name="addressInfo" class="form-control form-control-lg" value="<%= userInfo.address.info %>" placeholder="Địa Chỉ..." />
                              <label class="form-label" for="">Địa Chỉ</label>
                            </div>
                          </div>
                          <div class="col-6">
                            <div class="form-outline">
                              <select name="province" class="form-select form-control form-control-lg" aria-label="Default select example">
                                <%- showDeliveryList(deliveryList, userInfo.address.province) %>
                              </select>
                              <label class="form-label" for="form3Example1cg">Tỉnh</label>
                            </div>
                          </div>
                        </div>

                      </div>
                      <div class="form-outline mb-4">
                        <input type="text"  name="phonenumber" class="form-control form-control-lg" value='<%= userInfo.phonenumber%>' placeholder="Số điện thoại..." />
                        <label class="form-label" for="">Số điện thoại</label>
                      </div>
                      <div class="form-outline mb-4">
                        <input type="email"  name="email" class="form-control form-control-lg" value='<%= userInfo.email %>' disabled/>
                        <label class="form-label" for="form3Example3cg">Email của bạn</label>
                      </div>      
      
                      <div class="d-flex justify-content-center spinner">
                        <button type="submit"
                          class="btn btn-success btn-block btn-lg gradient-custom-4 ">Thay Đổi Thông Tin</button>
                      </div>
                      
                    </form>
      
                  </div>
                </div>
              </div>
              <div class="col-6 col-md-9 col-lg-7 col-xl-6">
                  <div class="card" style="border-radius: 15px;">
                  <div class="card-body p-5">
                    <h4 class="text-uppercase text-center mb-5">Thay Đổi Mật Khẩu</h4>
                <form id="formChangePassword" action="" method="post">
                    <div class="form-outline mb-2">
                      <input type="password"  name="password" class="form-control form-control-lg" required/>
                      <label class="form-label" for="form3Example4cg">Mật khẩu</label>
                    </div>
    
                    <div class="form-outline mb-2">
                      <input type="password"  name="confirmpassword" class="form-control form-control-lg" required/>
                      <label class="form-label" for="form3Example4cdg">Nhập lại mật khẩu</label>
                    </div>
                    <div class="d-flex justify-content-center spinner">
                      <button type="submit"
                        class="btn btn-success btn-block btn-lg gradient-custom-4 ">Đổi</button>
                    </div>
                  </form>
                  </div>
                </div>
                <div class="card" style="border-radius: 15px; margin-top: 2px;">
                  <div class="card-body p-5">
                    <h4 class="text-uppercase text-center mb-5">Tra Cứu Đơn Hàng</h4>
                <form id="formFindOrder" action="" method="post">
                    <div class="form-outline mb-2">
                      <input type="text"  name="codeOrder" class="form-control form-control-lg" required/>
                      <label class="form-label" for="form3Example4cdg">Nhập mã đơn hàng</label>
                    </div>
                    <div class="d-flex justify-content-center spinner">
                      <button type="submit"
                        class="btn btn-success btn-block btn-lg gradient-custom-4 ">Tra Cứu</button>
                    </div>
                  </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      </div>
  </div>
</div>