<%- include('./../../helpers/formatphonenumber'); -%>
<%
    let showDataAboutUs = (data, nameArr) =>{
        if (!data) return
        let html =''
        data.forEach((item, index)=>{
            html += `
            <li class="mb-md-0 mb-3">
                <strong class="d-block fwEbold counter mb-2">${item}</strong>
                <strong class="d-block text-uppercase txtWrap">${nameArr[index]}</strong>
            </li>
            `
        })
        return html
    }

    let showListMission = (data) =>{
        if (!data) return
        let html =''
        let dataParse = JSON.parse(data)
        dataParse.forEach((item, index)=>{
            let show = (index== 0) ? 'show' : ''
            html += `
            <div class="card mb-2">
                <div class="card-header px-xl-5 py-xl-3" id="headingMission${index}">
                    <h5 class="mb-0">
                        <button class="btn btn-link fwEbold text-uppercase text-left w-100 p-0" data-toggle="collapse" data-target="#collapseMission${index}" aria-expanded="true" aria-controls="collapseMission${index}">
                        ${item.name}<i class="fas fa-sort-down float-right"></i>
                        </button>
                    </h5>
                </div>
                <div id="collapseMission${index}" class="collapse ${show}" aria-labelledby="headingMission${index}" data-parent="#accordion">
                    <div class="card-body px-xl-5 py-0">
                        <p class="mb-7">${item.content}</p>
                    </div>
                </div>
            </div>
            `
        })
        return html
    }
%>
