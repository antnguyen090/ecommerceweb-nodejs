<%- include('./customdate'); -%>

<%
  showListArticle = (data, linkThumb) =>{
    if(!data) return
    let html =''
    data.forEach((item)=>{
      html+=`
            							<!-- newsBlogColumn -->
							<div class="newsBlogColumn col-12 col-lg-6 mb-md-9 mb-6">
								<div class="imgHolder position-relative mb-6">
									<a href="/tin-tuc/${item.slug}">
										<img src="${linkThumb + item.thumb}" alt="image description" class="img-fluid">
									</a>
								</div>
								<div class="textHolder d-flex align-items-start">
									<time class="time text-center text-uppercase py-sm-3 py-1 px-4" datetime="2019-02-03 20:00"> ${customDateArticle(item.createdAt)} </time>
									<div class="alignLeft pl-sm-3 pl-1">
										<h2 class="headingV fwEbold mb-2"><a href="/tin-tuc/${item.slug}">${item.name}</a></h2>
										<span class="postBy d-block pb-sm-1 mb-3"><a href="/tin-tuc/${item.category.slug}">Thể Loại: ${item.category.name}</a></span>
										<p class="mb-0">${item.description}</p>
									</div>
								</div>
							</div>
      `
    })
    return html
  }
%>