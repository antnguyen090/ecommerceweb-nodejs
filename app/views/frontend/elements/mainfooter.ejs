<%- include('./../helpers/showcategoryfooter'); -%>
<%- include('./../helpers/formatphonenumber'); -%>

<!-- footerHolder -->
<aside class="footerHolder container-fluid overflow-hidden px-xl-20 px-lg-14 pt-xl-6 pb-xl-4 pt-lg-6 pt-md-8 pt-6 pb-lg-4">
	<div class="d-flex flex-wrap">
			<div class="col-12 col-sm-6 col-lg-4 col-xl-4">
					<h3 class="headingVI fwEbold text-uppercase mb-7">Liên Hệ</h3>
					<ul class="list-unstyled footerContactList mb-3">
							<li class="mb-3 d-flex flex-nowrap"><span class="icon icon-place mr-3"></span> <address class="fwEbold m-0">Địa Chỉ: <%= settingPage.address%></address></li>
							<li class="mb-3 d-flex flex-nowrap"><span class="icon icon-phone mr-3"></span> <span class="leftAlign">Số Điện Thoại : <a href="tel:<%= settingPage.phonenumber%>"><%= formatPhoneNumber(settingPage.phonenumber)%></a></span></li>
							<li class="email d-flex flex-nowrap"><span class="icon icon-email mr-2"></span> <span class="leftAlign">Email:  <a href="javascript:void(0);"><%= settingPage.email%></a></span></li>
					</ul>
			</div>
			<div class="col-12 col-sm-6 col-lg-4 col-xl-4">
					<div class="logo mx-auto text-center">
						<a href="javascript:void(0);" class="d-block"><img src="/uploads/setting/<%=settingPage.logolarge%>" alt="Botanical" class="img-fluid" style="width:50%"></a>
					</div>
					<div class="d-flex">
						<ul class="list-inline followSocailNetwork mx-auto justify-content-center">
								<li class="list-inline-item fwEbold">Theo dõi:</li>
								<li class="list-inline-item"><a href="<%= settingPage.linkFacebook%>" target="_blank" class="fab fa-facebook-f"></a></li>
								<li class="list-inline-item"><a href="<%= settingPage.linkTwitter%>" target="_blank" class="fab fa-twitter"></a></li>
								<li class="list-inline-item"><a href="<%= settingPage.linkInstagram%>" target="_blank"><i class="fa-brands fa-square-instagram"></i></a></li>
								<li class="list-inline-item"><a href="<%= settingPage.linkYoutube%>" target="_blank"><i class="fa-brands fa-youtube"></i></a></li>
								<li class="list-inline-item"><a href="<%= settingPage.linkLinkedIn%>" target="_blank"><i class="fa-brands fa-linkedin"></i></a></li>
						</ul>
					</div>
			</div>
			<div class="col-12 col-sm-6 col-lg-4 col-xl-4">
					<h3 class="headingVI fwEbold text-uppercase">Danh Mục Sản Phẩm</h3>
					<ul class="list-inline tagNavList mx-auto justify-content-center">
							<%- showCategoryFooter(listCategory) %>
					</ul>
			</div>
	</div>
</aside>


